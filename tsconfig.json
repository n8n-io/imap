{
  "compilerOptions": {
    "rootDir": ".",
    "noEmit": true,
    "allowJs": true, // temporary
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": false
  },
  "exclude": ["node_modules", "dist"]
}
